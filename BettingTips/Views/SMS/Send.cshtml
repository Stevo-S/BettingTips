
@{
    ViewBag.Title = "Send";
}

<h2>Send</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label for="destination" class="control-label col-md-2">Destination</label>
            <div class="col-md-10">
                <input id="destination" type="tel" class="form-control" name="destination" />
            </div>
        </div>

        <div class="form-group">
            <label for="message" class="control-label col-md-2">Message</label>
            <div class="col-md-10">
                <input id="message" type="text" class="form-control" name="message" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send SMS" class="btn btn-lg" />
            </div>
        </div>
    </div>
}