@model PagedList.IPagedList<BettingTips.Models.ScheduledTip>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Scheduled Tips</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().TipNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Tip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DateScheduled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ServiceId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateScheduled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceId)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info btn-sm" })
        </td>
    </tr>
}

</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of (@Model.PageCount)

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))